# Global gitconfig for Fungible at Microsoft.
[url "git@github.com:fungible-inc/"]
	insteadOf = fungible://

[url "https://AzureCSI@dev.azure.com/AzureCSI/Fungible/_git/"]
	insteadOf = fungible-ado://

# Credential helper for ADO. This requires the 'git-credential-manager' cask
# from Homebrew.
#
# https://formulae.brew.sh/cask/git-credential-manager
[credential]
	helper =
	helper = /usr/local/share/gcm-core/git-credential-manager
[credential "https://dev.azure.com"]
	useHttpPath = true
